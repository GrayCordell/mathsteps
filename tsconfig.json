{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./lib/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest",
      "vite/client"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noEmit": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "index.js", "index.ts", "test/**/*",  "src/**/*", "./vite.config.ts"],
  "exclude": ["**/dist","dist","**/node_modules","**/.*/", ",cypress", "**/node_modules", "coverage"]
}
